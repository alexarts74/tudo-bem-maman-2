<div id="mySidenav" class="sidenav">
  <a id="closeBtn" class="sidenav-close">&times;</a>
  <ul>
    <li><%= link_to "Home", root_path %></li>
    <li><%= link_to "T-shirts", clothes_path %></li>
  </ul>
  <div class="sidenav-session">
    <% if user_signed_in? %>
      <% if current_user.admin == true %>
        <%= link_to "Dashboard", dashboard_path %>
      <% end %>
      <% if @cart.present? %>
        <%= link_to "Cart", my_cart_path %>
      <% end %>
      <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete } %>
    <% else %>
      <%= link_to "Log in", new_user_session_path %>
      <%= link_to "Create account", new_user_registration_path %>
    <% end %>
  </div>
</div>
<div class="sidenav-overlay" id="sidenavOverlay"></div>

<div class="navbar-lewagon">
  <a id="openBtn" class="navbar-burger">
    <span class="burger-icon">
      <span></span>
      <span></span>
      <span></span>
    </span>
  </a>
  <a href="/" class="navbar-logo">TBM</a>
  <% if user_signed_in? %>
    <%= link_to my_cart_path, class: "navbar-cart" do %>
      <i class="fa-solid fa-bag-shopping"></i>
      <% if @cart.present? %>
        <span class="cart-badge"><%= @cart.count %></span>
      <% end %>
    <% end %>
  <% else %>
    <div class="navbar-cart-placeholder"></div>
  <% end %>
</div>
