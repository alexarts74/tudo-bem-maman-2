<h1 class="page-title">DASHBOARD</h1>

<div class="container">
  <h3 class="h3-dash">Ventes</h3>
  <div class="clothe-cards">
    <% @clothe.each do |clothe| %>
      <div class="clothe-card">
        <%= image_tag url_for(clothe.image), class: "image-dashboard" if clothe.image.attached? %>
        <div class="card-info">
          <p style="font-weight: 600; color: #0a0a0a; text-transform: uppercase; letter-spacing: 0.5px;"><%= clothe.name %></p>
          <p><%= clothe.price / 100 %>&euro;</p>
          <p><%= clothe.sales_count %> vendu(s)</p>
          <p style="font-weight: 600;">Total : <%= clothe.sales_count * clothe.price / 100 %>&euro;</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
