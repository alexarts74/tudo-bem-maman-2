<div class="collection-header">
  <h1 class="page-title">COLLECTION</h1>
  <p class="collection-subtitle">Découvrez nos pièces en coton 100% — confort et style streetwear.</p>
  <p class="collection-count"><%= @clothes.count %> produits</p>
  <% if current_user && current_user.admin? %>
    <div class="collection-admin-actions">
      <%= link_to "DASHBOARD", dashboard_path, class: "button_dashboard" %>
    </div>
  <% end %>
</div>

<div class="collection-container">
  <div class="clothe-cards">
    <% @clothes.each_with_index do |clothe, index| %>
      <%= link_to clothe_path(clothe), class: "clothe-card", style: "animation-delay: #{index * 0.08}s" do %>
        <div class="img-clothe">
          <% if clothe.image.attached? %>
            <%= image_tag url_for(clothe.image), class: "img", alt: clothe.name %>
          <% end %>
        </div>
        <div class="card-info">
          <p class="title-card"><%= clothe.name %></p>
          <div class="card-meta">
            <span class="category-badge"><%= clothe.category %></span>
            <span class="size-badge"><%= clothe.size %></span>
          </div>
          <p class="price"><%= clothe.price / 100 %>&euro;</p>
          <% if user_signed_in? && current_user.admin == true %>
            <p class="sales-count"><%= clothe.sales_count %> vendu(s)</p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<% if user_signed_in? && current_user.admin == true %>
  <div class="collection-admin-bottom">
    <%= link_to "NOUVEAU T-SHIRT", new_clothe_path, class: "button_dashboard" %>
  </div>
<% end %>
